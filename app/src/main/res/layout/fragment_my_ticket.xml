<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ticket"
    tools:context=".MyTicketFragment"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:paddingTop="20dp"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Your Ticket"
                   android:textStyle="bold"
                   android:textSize="28dp"
                   android:textColor="@color/tab"
                   android:gravity="center"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:gravity="top"
                   android:layout_marginTop="15dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="your Name:  "
                       android:layout_marginLeft="15dp"
                       android:textSize="20dp"
                       android:textColor="@color/tab"
                       android:textStyle="bold"
                       >
                   </TextView>
                   <TextView
                       android:id="@+id/name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="mhmd"
                       android:gravity="start"
                       android:textSize="18dp"
                       android:textColor="@android:color/black"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:gravity="top"
                   android:layout_marginTop="15dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="your Mail:  "
                       android:layout_marginLeft="15dp"
                       android:textSize="20dp"
                       android:textColor="@color/tab"
                       android:textStyle="bold"
                       >
                   </TextView>
                   <TextView
                       android:id="@+id/mail_ticket"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="amirbahrawy@gmail.com"
                       android:gravity="start"
                       android:textSize="18dp"
                       android:textColor="@android:color/black"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:gravity="top"
                   android:layout_marginTop="15dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="your phone:  "
                       android:layout_marginLeft="15dp"
                       android:textSize="20dp"
                       android:textColor="@color/tab"
                       android:textStyle="bold"
                       >
                   </TextView>
                   <TextView
                       android:id="@+id/phone"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="01152762486"
                       android:gravity="start"
                       android:textSize="18dp"
                       android:textColor="@android:color/black"
                       />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="vertical"
               >
               <ImageView
                   android:id="@+id/qr"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   tools:src="@drawable/qr"
                   />
               <TextView
                   android:id="@+id/logout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Logout"
                   android:textSize="24sp"
                   android:textStyle="bold"
                   android:textColor="@color/tab"
                   android:gravity="center"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="25dp"
                   />
           </LinearLayout>
       </LinearLayout>
       <ProgressBar
           android:id="@+id/progress"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           />
   </RelativeLayout>

</FrameLayout>